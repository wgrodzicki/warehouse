<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Warehouse.styles.css" asp-append-version="true" />
</head>
<body>

    @* Navbar *@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" id="navbar">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Warehouse</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (Helpers.Helpers.CurrentUserRole != Helpers.Helpers.UserRole.None)
                            {
                                <a class="nav-link text-white" asp-area="" asp-page="/Index">Roles</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (Helpers.Helpers.CurrentUserRole == Helpers.Helpers.UserRole.Coordinator)
                            {
                                @if (this.ViewData["Title"].ToString() != "Warehouse")
                                {
                                    <form method="post" asp-page-handler="AccessData">
                                        <input class="nav-link text-white" id="form-data-access" type="submit" value="Data access"/>
                                    </form>
                                }
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @* Main part *@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* Footer *@
    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - Warehouse - by Wojciech Grodzicki
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>