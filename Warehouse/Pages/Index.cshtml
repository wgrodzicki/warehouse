@page
@model IndexModel
@{
    ViewData["Title"] = "Warehouse";
}

<div container class="text-center">
    <div class="row justify-content-center">
        <div class="col-12">
            <h3>Welcome to the Warehouse!</h3>
        </div>
    </div>
    <br />
    @{
        if (!Model.CoordinatorRoleChosen)
        {
            <div class="row justify-content-center">
                <div class="col-12">
                    <h5>Choose you role:</h5>
                </div>
            </div>
            <br />
            <div class="row justify-content-center">
                <div class="col-2">
                    <form method="post" asp-page-handler="Coordinator">
                        <input type="submit" class="btn btn-primary" value="Coordinator">
                    </form>
                </div>
                <div class="col-2">
                    <form method="post" asp-page-handler="Employee">
                        <input type="submit" class="btn btn-primary" value="Employee">
                    </form>
                </div>
            </div>
        }
        else if (Helpers.Helpers.CurrentUserRole == Helpers.Helpers.UserRole.Coordinator)
        {
            <div class="row justify-content-center">
                <div class="col-2">
                    <a class="btn btn-primary" asp-page="/Items">Items</a>
                </div>
            </div>
            <br />
            <div class="row justify-content-center">
                <div class="col-2">
                    <a class="btn btn-primary" asp-page="/Requests">Requests</a>
                </div>
            </div>
        }
    }
</div>
